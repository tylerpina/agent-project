{
  "name": "ideaforge",
  "version": "1.0.0",
  "description": "CLI tool to convert PRDs into AI-ready specs and executable task DAGs",
  "bin": {
    "ideaforge": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "esbuild src/cli.ts --bundle --platform=node --outfile=dist/cli.js --format=esm",
    "test": "vitest",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.29",
    "ai": "^5.0.42",
    "better-sqlite3": "^9.6.0",
    "commander": "^12.1.0",
    "drizzle-orm": "^0.44.5",
    "gray-matter": "^4.0.3",
    "mammoth": "^1.10.0",
    "pdf-parse": "^1.1.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.13",
    "esbuild": "^0.21.5",
    "eslint": "^9",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "cli",
    "ai",
    "prd",
    "code-generation",
    "task-automation"
  ],
  "author": "Tyler Pina",
  "license": "MIT"
}
